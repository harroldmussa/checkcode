# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/code-quality-dashboard
# Alternative for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/code-quality-dashboard

# Redis Configuration (Optional - will use memory cache if not provided)
REDIS_URL=redis://localhost:6379
# Alternative for Redis Cloud:
# REDIS_URL=redis://username:password@host:port

# GitHub API Configuration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_API_URL=https://api.github.com

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# API Keys (comma-separated list for programmatic access)
VALID_API_KEYS=cqd_dev_key_1,cqd_dev_key_2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ANALYSIS_RATE_LIMIT_MAX=5
ANALYSIS_RATE_LIMIT_WINDOW_MS=600000

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Analysis Configuration
DEFAULT_ANALYSIS_TIMEOUT=300000
MAX_FILE_SIZE_BYTES=1048576
MAX_FILES_TO_ANALYZE=1000

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# External Services (Optional)
SONAR_TOKEN=your_sonar_token_here
SNYK_TOKEN=your_snyk_token_here

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your-webhook-secret-here

# Frontend URL (for CORS and links)
FRONTEND_URL=http://localhost:3000

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Performance
WORKER_PROCESSES=auto
CLUSTER_MODE=false

# Development
DEBUG=code-quality-dashboard:*